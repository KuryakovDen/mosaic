{
    "buildOnSave": false,
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@ptsecurity/cdk/keycodes": ["packages/cdk/keycodes/index.ts"],
            "@ptsecurity/cdk/a11y": ["packages/cdk/a11y/index.ts"],
            "@ptsecurity/mosaic/core": ["packages/mosaic/core/index.ts"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
